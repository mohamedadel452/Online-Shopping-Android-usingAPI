<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Succsessful"
    tools:ignore="ExtraText"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/lrr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="6">

        <ImageView
            android:id="@+id/i"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:src="@drawable/right" />

        <TextView
            android:id="@+id/t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textColorHint="@color/white"
            android:textAlignment="center"
            android:textSize="40dp"
            android:textStyle="bold"
            android:text="Successful!"
            />
        <TextView

            android:id="@+id/undersignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="you have sucessfully registered in\nour app and start working in it  "
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:alpha=".5"/>

        <Button
            android:id="@+id/gohome"
            android:layout_marginTop="150dp"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="start shoping "
            android:background="@drawable/blacke_buton2"
            app:backgroundTint="@null"/>


    </LinearLayout>

</RelativeLayout>